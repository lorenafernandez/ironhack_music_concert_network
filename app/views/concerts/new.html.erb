<% if @concert.errors.any? %>
	<ul>
		<% @concert.errors.full_messages.each do |error| %>
			<li> <%= error %> </li>
		<% end %>
	</ul>
<% end %>


<div class="form">

	<%= form_for @concert do |f| %>

		<%= f.label  :band %>
		<%= f.text_field :band %>

		<%= f.label  :venue %>
		<%= f.text_field :venue %>

		<%= f.label  :city %>
		<%= f.text_field :city %>

		<%= f.label  :date %>
		<%= f.date_field :date , class: "date"%>

		<%= f.label  :price %>
		<%= f.number_field :price %>

		<%= f.label  :description %>
		<%= f.text_area :description, rows: 3, cols: 40 %>

		<p> <%= f.submit 'Create concert'%> </p>


	<% end %>

</div>